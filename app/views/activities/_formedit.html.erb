<div class="welcome_box_black">
  <h1 align="center">Edit Activity</h1>
  <%= form_with model: @activitie, local: true do |form| %>
    <% if @activitie.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@activitie.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @activitie.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
   
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>

    <p>
      <%= form.label :initial_date %><br>
      <%= form.datetime_select :initial_date %>
    </p>

    <p>
      <%= form.label :final_date %><br>
      <%= form.datetime_select :final_date %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %> 
  <%= link_to 'Back', activities_path, :style=>'color:#FFFFFF;' %>
</div>  
