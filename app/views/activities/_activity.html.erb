<div class="welcome_box_black">
        <h1>Listing activities</h1>
        <br>
        <br>
        <p class = "pdown">Download:
          <a id="link"><%= link_to "CSV", activities_path(format: "csv"), :style=>'color:#FFFFFF;' %></a> |
          <a id="link"><%= link_to "PDF", activities_path(format: "pdf"), :style=>'color:#FFFFFF;' %></a>
        </p>
        <br>
        <br>
        <table>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Initial Date</th>
            <th>Final Date</th>
            <th>User ID</th>
            <th></th>
          </tr>
         
          <% @activities.each do |activitie| %>
            <tr>
              <td><%= activitie.name %></td>
              <td><%= activitie.description %></td>
              <td><%= activitie.initial_date %></td>
              <td><%= activitie.final_date %></td>
              <td><%= activitie.user_id%></td>
              <td><%= link_to 'Show', activity_path(activitie), :style=>'color:#FFFFFF;' %></td>
              <td><%= link_to 'Edit', edit_activity_path(activitie), :style=>'color:#FFFFFF;' %></td>
              <td><%= link_to 'Destroy', activity_path(activitie),:style=>'color:#FFFFFF;',
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </table>
        <br>
        <br>
        <br>
        <br>
        <%= link_to 'New activity', new_activity_path, :style=>'color:#FFFFFF;' %>
        <br>
        <br>
        <br>
        <br>
        <%= link_to 'Back to Home Page', welcome_index_path, :style=>'color:#FFFFFF;' %>
      </div>